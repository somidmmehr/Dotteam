@model Dotteam.Models.TechModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-3">
    <div class="container">
        <h2 class="h2">Edit Tech</h2>

        <partial name="../Shared/_Message.cshtml" model="@TempData["Message"]" />

        <hr />
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input name="imageFile" class="form-control" type="file" />
                        <input type="hidden" asp-for="Image" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                        <img class="img-responsive img-thumbnail mt-3" src="~/@Model.Image" alt="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" /> | <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

