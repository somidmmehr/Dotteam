@model Dotteam.Models.TechModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-3">
    <div class="container">
        <h2 class="h2">Delete Tech</h2>
        <h3 class="h3">Are you sure you want to delete this?</h3>
        <hr />

        <div>
            <div class="row">
                <div class="col-md-8">
                    <h3 class="h3 mb-3">@Html.DisplayFor(model => model.Name)</h3>
                    <p>@Html.DisplayFor(model => model.Description)</p>
                    <br />
                    <p>@Html.DisplayFor(model => model.Description)</p>
                </div>
                <div class="col-md-4">
                    <img src="~/@Html.DisplayFor(model => model.Image)" class="img-responsive img-thumbnail" />
                </div>
            </div>
            <hr />
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
