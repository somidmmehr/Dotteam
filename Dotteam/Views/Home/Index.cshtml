@if (LastProject != null)
{
    <div id="projects" class="features">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="features-text wow fadeInDown p-5">
                        <h1>Our Latest Project</h1>
                        <h2>@LastProject.Name</h2>
                        <p>@LastProject.DescriptionShort</p>
                        <a class="btn btn-primary btn-action" asp-controller="Project" asp-action="Details" asp-route-id="@LastProject.Id"><span>Learn more</span></a>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="features-image wow fadeInRight">
                        <img class="img-responsive" src="~/images/LatestProject.jpg" alt="@LastProject.Name" style="border-top: 1px solid #7bd4ff;border-right: 1px solid #7bd4ff;">
                    </div>
                </div>
