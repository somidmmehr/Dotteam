<div id="pricing" class="pricing-v2">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="intro wow fadeInDown" data-wow-delay="0.1s">
                    <h4>Learn more about our Projects</h4>
                    <h1>Projects</h1>
                    <p>
                        Our devotion to quality and performance is exceptional!
                        We have  very fair pricing policy that would benefit you and us at the same time.
                        Get your orders at top condition and in the least time.
                        Every project comes with 1 month <span class="text-primary">FREE</span> support and <span class="text-primary">FREE</span> tutoring!
                    </p>
                    <p>Have something big? <a href="#">Contact us</a></p>
                </div>
            </div>
            @if (Projects != null)
            {
                @foreach (var Project in Projects)
                {
                    <div class="col-sm-4 text-center">
                        <div class="table-left wow fadeInDown project-holder" data-wow-delay="0.2s">
                            <div class="project-details">
                                <img src="~/icons/favicon.png" class="img-responsive img-circle" />
                                <h2>@Project.Name</h2>
                                <hr />
                                <p>@Project.DescriptionShort</p>
                                <hr />
                                <a class="btn btn-primary btn-action btn-edge" asp-controller="Project" asp-action="Details" asp-route-id="@LastProject.Id">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>

